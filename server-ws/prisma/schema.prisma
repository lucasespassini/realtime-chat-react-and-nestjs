generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model messages {
  msg_id      Int      @id @default(autoincrement())
  msg_rom_id  Int
  msg_ulid    String   @unique(map: "UK_messages_ulid") @db.VarChar(26)
  msg_content String   @db.VarChar(255)
  msg_read    Boolean? @default(false)
  room        room     @relation(fields: [msg_rom_id], references: [rom_id], onDelete: NoAction, onUpdate: Restrict, map: "FK_messages_room")

  @@index([msg_rom_id], map: "FK_messages_room")
}

model room {
  rom_id     Int        @id @default(autoincrement())
  rom_usr_id Int
  rom_ulid   String     @unique(map: "UK_room_ulid") @db.VarChar(26)
  messages   messages[]
  users      users      @relation(fields: [rom_usr_id], references: [usr_id], onDelete: NoAction, onUpdate: Restrict, map: "FK_room_users")

  @@index([rom_usr_id], map: "FK_room_users")
}

model users {
  usr_id       Int    @id @default(autoincrement())
  usr_ulid     String @unique(map: "UK_users_ulid") @db.VarChar(26)
  usr_username String @unique(map: "UK_users_username") @db.VarChar(255)
  usr_password String @db.VarChar(255)
  room         room[]
}
